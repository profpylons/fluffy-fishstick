# Claude API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=<your-anthropic-key>

# MCP Server URL (Cloudflare Workers endpoint)
# Local development: http://localhost:8787
# Production: https://rawg-mcp-server.profpylons.workers.dev
MCP_SERVER_URL=http://localhost:8787

# Client Authentication Token (required in query string)
# Users must access the app with ?clientToken=<this-value>
CLIENT_TOKEN=your-secure-token-here

# Shared Secret for MCP Server Communication
# Used to authenticate requests from chat app to MCP server
SHARED_SECRET=your-shared-secret-here
